<h1>確認画面</h1>
<%= form_with(model: @picture, url: pictures_path, local: true) do |f| %>
  <%= @picture.content %>
  <%= f.hidden_field :content %>
  <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit "投稿" %>
<% end %>
<%= form_with(model: @picture, url: new_picture_path, local: true, method: "get") do |f| %>
  <%= f.hidden_field :content %>
  <%= f.hidden_field :image_cache %>
  <%= f.submit "戻る", name: "back" %>
<% end %>
