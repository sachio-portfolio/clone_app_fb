<div class="">
  <% if @user.errors.any? %>
    <div class="" id="error_explanation">
      <h3>下記の <%= @user.errors.count %>つのエラーにより、<%= @user.name %> さんを登録できませんでした</h3>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>
<div class="">
  <h5>簡単に登録できます</h5>
</div>
<%= form_with(model: @user, local: true) do |f| %>
<div class="form_group" >
  <%= f.text_field :name, placeholder: "名前", rows: 7, class: "form-control" %>
</div>
<div class="form_group" >
  <%= f.text_field :email, placeholder: "メールアドレス", rows: 7, class: "form-control" %>
</div>
<div class="form_group" >
  <%= f.password_field :password, placeholder: "パスワード", rows: 7, class: "form-control" %>
</div>
<div class="form_group" >
  <%= f.password_field :password_confirmation, placeholder: "パスワード再入力", rows: 7, class: "form-control" %>
</div>
<label class="send btn btn-default btn-block"><div>
  <%= f.submit "投稿", class: "send"%>アカウント登録
</div></label>
<% end %>
